<Window x:Class="SwitchyLingus.UI.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="300"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Icon="Icon24.ico"
        Style="{StaticResource DefaultStyle}">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBorder" Color="#d6827f"/>
    </Window.Resources>
    <StackPanel Margin="12">
        <TextBlock x:Name="MessageText"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Width="70" Margin="0,0,10,0"
                    IsDefault="True" Click="YesClick"/>
            <Button Content="No" Width="70"
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
