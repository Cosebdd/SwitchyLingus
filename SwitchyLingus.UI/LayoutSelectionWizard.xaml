<Window x:Class="SwitchyLingus.UI.LayoutSelectionWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Title="Create New Profile" 
        Height="500" 
        Width="800"       
        MinHeight="300"
        MinWidth="470"
        Icon="Icon24.ico"
        Style="{StaticResource DefaultStyle}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Profile Name:" VerticalAlignment="Center"/>
            <TextBox Width="250" VerticalAlignment="Center"
                     Text="{Binding ProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <Label DockPanel.Dock="Top" Content="Available Keyboard Layouts"/>
                <TextBox DockPanel.Dock="Top" Margin="0,0,0,5"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <ListView ItemsSource="{Binding AvailableLayouts}"
                          SelectedItem="{Binding SelectedAvailableLayout}"
                          ItemContainerStyle="{StaticResource GridViewItemStyle}"
                          MouseDoubleClick="AvailableLayouts_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Layout" Width="200"
                                            DisplayMemberBinding="{Binding DisplayName}"/>
                            <GridViewColumn Header="Language" Width="100"
                                            DisplayMemberBinding="{Binding LanguageTag}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <Button Content="Add &gt;&gt;" Margin="0,5"
                        Command="{Binding AddSelectedLayoutsCommand}"/>
                <Button Content="&lt;&lt; Remove" Margin="0,5"
                        Command="{Binding RemoveSelectedLayoutsCommand}"/>
            </StackPanel>

            <DockPanel Grid.Column="2">
                <Label DockPanel.Dock="Top" Content="Selected Layouts"/>
                <ListView ItemsSource="{Binding SelectedLayouts}"
                          SelectedItem="{Binding SelectedChosenLayout}"
                          ItemContainerStyle="{StaticResource GridViewItemStyle}"
                          MouseDoubleClick="SelectedLayouts_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Layout" Width="200"
                                            DisplayMemberBinding="{Binding DisplayName}"/>
                            <GridViewColumn Header="Language" Width="80"
                                            DisplayMemberBinding="{Binding LanguageTag}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" IsDefault="True"
                    Click="OkButtonClick" IsEnabled="{Binding CanSave}"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
