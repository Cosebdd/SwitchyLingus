<Window
    x:Class="SwitchyLingus.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:SwitchyLingus.UI"
    xmlns:viewModel="clr-namespace:SwitchyLingus.UI.ViewModel"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}"
    Style="{StaticResource DefaultStyle}"
    Visibility="Hidden">

    <Window.Resources>
        <CollectionViewSource x:Key="ProfileItems" Source="{Binding ProfileItems}" />
    </Window.Resources>

    <tb:TaskbarIcon x:Name="myNotifyIcon"
                    Visibility="Visible"
                    ToolTipText="SwitchyLingus"
                    IconSource="Logo.ico"
                    MenuActivation="LeftOrRightClick"
                    PopupActivation="DoubleClick">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <ContextMenu.ItemsSource>
                    <CompositeCollection>
                        <CollectionContainer Collection="{Binding Source={StaticResource ProfileItems}}" />
                        <MenuItem Header="Options..." Command="{Binding OptionsCommand}" />
                        <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
                    </CompositeCollection>
                </ContextMenu.ItemsSource>
                <ContextMenu.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Command" Value="{Binding ItemCommand}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter Property="IsChecked" Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContextMenu.ItemContainerStyle>
                <ContextMenu.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding Name}" />
                        </WrapPanel>
                    </DataTemplate>
                </ContextMenu.ItemTemplate>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</Window>