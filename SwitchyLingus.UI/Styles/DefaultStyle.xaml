<ResourceDictionary x:Class="SwitchyLingus.UI.Styles.DefaultStyle" 
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Base">#faf4ed</Color>
    <Color x:Key="RosePineBase">#191724</Color>
    <Color x:Key="Overlay">#f2e9e1</Color>
    <Color x:Key="Surface">#fffaf3</Color>
    <Color x:Key="Subtle">#797593</Color>
    <Color x:Key="SubtleBorder">#D3CED1</Color>
    <Color x:Key="SubtleHover">#F3EDE8</Color>
    <Color x:Key="SubtleSelected">#EFE9E4</Color>
    <Color x:Key="SubtleSubSelected">#E5E0DE</Color>
    <Color x:Key="SubtleFoam">#93AFB7</Color>
    <Color x:Key="Text">#575279</Color>
    <Color x:Key="Muted">#9893a5</Color>
    <Color x:Key="Love">#b4637a</Color>
    <Color x:Key="RoseLight">#d6827f</Color>
    <Color x:Key="RoseLightSelected">#c37776</Color>
    <Color x:Key="Rose">#d7827e</Color>
    <Color x:Key="RoseLighter">#DA8D8A</Color>
    
    <Color x:Key="Dark">#333231</Color>

    <SolidColorBrush x:Key="WindowBorder" Color="{StaticResource Surface}"/>
    
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="UiTitleBrush" Color="{StaticResource Subtle}"/>
    <SolidColorBrush x:Key="TitleBarInactiveBackgroundBrush" Color="{StaticResource Base}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Base}"/>

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource Base}"/>

    <SolidColorBrush x:Key="SelectedItemBrush" Color="{StaticResource SubtleSelected}"/>
    <SolidColorBrush x:Key="SelectedTextItemBorderBrush" Color="{StaticResource SubtleBorder}"/>
    <SolidColorBrush x:Key="SelectedTextBrush" Color="{StaticResource Text}"/>

    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource RoseLight}"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource RoseLighter}"/>
    <SolidColorBrush x:Key="ButtonHoverTextBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource RoseLight}"/>
    
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource SubtleHover}"/>
    <SolidColorBrush x:Key="HoverTextBrush" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>

    <SolidColorBrush x:Key="ListViewHeader" Color="{StaticResource Dark}"/>
    <SolidColorBrush x:Key="ListViewHeaderBorder" Color="{StaticResource Dark}"/>
    
    <SolidColorBrush x:Key="ListViewScrollBackground" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="ListViewScrollThumb" Color="{StaticResource SubtleSelected}"/>
    <SolidColorBrush x:Key="ListViewScrollThumbHover" Color="{StaticResource SubtleSubSelected}"/>
    <SolidColorBrush x:Key="ListViewScrollThumbDrag" Color="{StaticResource SubtleFoam}"/>

    <SolidColorBrush x:Key="InputBorder" Color="{StaticResource SubtleBorder}"/>
    <SolidColorBrush x:Key="ContextMenuBorder" Color="{StaticResource SubtleBorder}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource Muted}"/>
    <SolidColorBrush x:Key="UiTextBrush" Color="{StaticResource Subtle}"/>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="{StaticResource ListViewScrollBackground}"/>
        <Setter Property="Width" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="0" Padding="1">
                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb x:Name="thumb">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border x:Name="thumbBd"
                                                    Background="{StaticResource ListViewScrollThumb}"
                                                    CornerRadius="6"
                                                    MinHeight="20"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="thumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="thumb" Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Background="{StaticResource ListViewScrollThumbHover}"
                                                CornerRadius="6"
                                                MinHeight="20"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger SourceName="thumb" Property="IsDragging" Value="True">
                            <Setter TargetName="thumb" Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Background="{StaticResource ListViewScrollThumbDrag}"
                                                CornerRadius="6"
                                                MinHeight="20"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="10"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ScrollViewer>
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{StaticResource ListViewHeader}"/>
        <Setter Property="Foreground" Value="{StaticResource UiTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ListViewHeaderBorder}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <Thumb x:Name="PART_HeaderGripper"
                               HorizontalAlignment="Right"
                               Width="4" Margin="0,0,-2,0"
                               Background="Transparent">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Border Background="Transparent" Width="{TemplateBinding Width}" Cursor="SizeWE"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            Padding="4,2">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource HoverTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedItemBrush}"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource SelectedTextItemBorderBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource SelectedTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="GridViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            Padding="{TemplateBinding Padding}">
                        <GridViewRowPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource HoverTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedItemBrush}"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource SelectedTextItemBorderBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource SelectedTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource UiTextBrush}"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonHoverTextBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DisabledTextBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource UiTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ContextMenuBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="0,4"
                            CornerRadius="4">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource UiTextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Check"
                                       Grid.Column="0"
                                       Text="✓"
                                       Foreground="{TemplateBinding Foreground}"
                                       Visibility="Collapsed"
                                       VerticalAlignment="Center"/>
                            <ContentPresenter Grid.Column="1" ContentSource="Header"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bd" Property="Background"
                                    Value="{StaticResource HoverBrush}"/>
                            <Setter Property="Foreground"
                                    Value="{StaticResource HoverTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource DisabledTextBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>

    <Style x:Key="DefaultStyle" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome NonClientFrameEdges="None"
                              ResizeBorderThickness="7"
                              CaptionHeight="24" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border
                        x:Name="PART_Container"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource WindowBorder}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid TextOptions.TextRenderingMode="ClearType"
                              TextOptions.TextFormattingMode="Display">
                            <DockPanel HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch">
                                <Border
                                    x:Name="PART_TitleBar"
                                    DockPanel.Dock="Top"
                                    Background="{StaticResource TitleBarBackgroundBrush}"
                                    BorderThickness="0"
                                    CornerRadius="7,7,0,0">
                                    <Grid Height="32">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="24" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel x:Name="PART_TitleContent"
                                                    Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Margin="4,4,0,4">
                                            <Image Source="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Icon}"
                                                   Width="24" Height="24"
                                                   Margin="0,0,4,0"
                                                   WindowChrome.IsHitTestVisibleInChrome="False"/>
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Segoe UI Variable"
                                                       FontSize="14"
                                                       FontStyle="Normal"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource UiTitleBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                x:Name="PART_CloseButton"
                                                VerticalAlignment="Top"
                                                Width="24"
                                                Height="24"
                                                Click="CloseButtonClick"
                                                BorderThickness="0"
                                                WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource HoverTextBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Grid MaxHeight="9" MaxWidth="9">
                                                <Path
                                                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    StrokeThickness="1.5"
                                                    Stretch="None"
                                                    Data="M0,0 L8,8 M0,8 L8,0" />
                                            </Grid>
                                        </Button>

                                    </Grid>

                                </Border>

                                <ContentPresenter />
                            </DockPanel>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsActive" Value="False">
                            <Setter TargetName="PART_TitleBar" Property="Background"
                                    Value="{StaticResource TitleBarInactiveBackgroundBrush}" />
                            <Setter TargetName="PART_TitleContent" Property="Opacity"
                                    Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>